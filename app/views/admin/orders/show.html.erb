<div class='container'>
    <div class='row'>
            <h2>注文履歴詳細</h2>
    </div>
</div>
<div class='container'>
    <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
            <p>購入者</p><p><%= @order.name%></p>
            <p>注文日</p><p><%= @order.created_at%></p>
            <p>配送先</p><p>〒<%= @order.post_code%> <%= @order.address%></p>
           <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
           <%= f.select :status, Order.statuses_i18n.keys.map { |k| [I18n.t("enums.order.status.#{k}"), k] } %>
           <%= f.submit "更新", class: 'btn btn-success' %>
           <% end %>
        </div>
                 <table class="table table-hover table-inverse">
               <thead>
                   <tr>
                       <th>商品名</th>
                       <th>単価（税込）</th>
                       <th>数量</th>
                       <th>小計</th>
                       <th>製作ステータス</th>
                       <th></th>
                   </tr>
               </thead>
               <tbody>
                   <% @item.each { |item| %>
                   <% total = 0 %>
                   <% item.order_items.each { |order_item| %>
                   <% total += order_item.amount %>
                   <% } %>
                   <tr>
                       <td><%= item.name%></td>
                       <td><%= item.price%></td>
                       <td><%= @order.status_i18n%></td>
                       <td><%= total %></td>
                       <td><%=  %></td>
                       <td><%=  %></td>
                       
                   </tr>
                   <% } %>
               </tbody>
           </table>
    </div>
</div>





