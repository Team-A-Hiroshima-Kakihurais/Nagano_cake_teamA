<div class='container'>
    <div class='row'>
            <h2>注文履歴一覧</h2>
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @order.each { |order| %>
                <% total = 0 %>
                <% order.order_items.each { |order_item| %>
                <% total += order_item.amount %>
                 <% } %>
                <tr>
                    <td><%= link_to  order.created_at, admin_order_path(order.id) %></td>
                    <td><%= order.name %></td>
                    <td><%= total %></td>
                    <td><%= order.status_i18n %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <%= paginate @order %>
    </div>
</div>

          
     
           