<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-8 offset-md-1 mt-5">
   <h2><span class="bg-secondary">新規会員登録</span></h2>
  </div>
 
  <div class="col-md-8 offset-md-1 mt-5">
   <%= form_with model: @customer, url: customer_registration_path do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>
   <table class="table table-borderless">
    <tr>
     <td>名前</td>
     <td>（姓）</td>
     <td>
      <%= f.text_field :last_name %>
     </td>
     <td>（名)</td>
     <td>
      <%= f.text_field :first_name %>
     </td>
    </tr>
    
    <tr>
     <td>フリガナ</td>
     <td>(セイ)</td>
     <td>
      <%= f.text_field :last_name_kana %>
     </td>
     <td nowrap>(メイ)</td>
     <td>
      <%= f.text_field :first_name_kana %>
     </td>
    </tr>

    <tr>
     <td>メールアドレス</td>
     <td></td>
     <td>
      <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
     </td>
    </tr>
    
    <tr>
     <td nowrap>郵便番号(ハイフンなし)</td>
     <td></td>
     <td>
      <%= f.text_field :post_code %>
     </td>
    </tr>
    
    <tr>
     <td>住所</td>
     <td></td>
     <td>
      <%= f.text_field :address %>
     </td>
    </tr>
    
    <tr>
     <td>電話番号(ハイフンなし)</td>
     <td></td>
     <td>
      <%= f.text_field :phone_number %>
     </td>
    </tr>
    
    <tr>
     <td>パスワード(6文字以上)</td>
     <td></td>
     <td>
      <%= f.password_field :password, autocomplete: "new-password" %>
     </td>
    </tr>
    
    <tr>
     <td>パスワード(確認用)</td>
     <td></td>
     <td>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
     </td>
    </tr>
    
    <tr>
     <td></td>
     <td></td>
     <td>
      <div class="actions">
       <%= f.submit "新規登録", class: 'btn btn-success btn-sm' %>
      </div>
     </td>
    </tr>
   </table>
   <% end %>
  </div>

  <div class="col-md-8 offset-md-1 mt-5">
   <h2><span class="bg-secondary">既に登録済みの方</span></h2>
   <p class="mt-3">
    <span>
     <%= link_to "こちら", new_session_path(resource_name) %>
    </span>
     からログインしてください
   </p>
  </div>

 </div>
</div>