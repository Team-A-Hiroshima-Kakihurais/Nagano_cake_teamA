<h2 class="mt-3">New book</h2>

  <%= form_with model: @delivery do |f| %>
  <div class="form-group">
    Title
  </div>
  <p><%= f.text_field :post_code %></p>
  <div class="form-group">
    Opinion
  </div>
  <p><%= f.text_area :address %></p>
  <p><%= f.text_area :name %></p>
  <div class="row">
    <%= f.submit 'Create Book', class: 'btn btn-success btn-sm' %>
  </div>

<% end %>

