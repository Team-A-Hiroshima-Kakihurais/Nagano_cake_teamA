<%= form_with model:cart do |f| %>
  <div class="form-group w-50 ml-auto mt-4">
    <%= f.select :amount, [*1..10],{include_blank: '個数選択'},
    {class: "w-50 d-inline form-control", id:"item-btn"} %>
    <%= f.hidden_field :item_id, :value => item.id%>
    <%= f.submit 'カートに入れる', class: " ml-2 btn btn-success "%>
  </div>
<% end %>