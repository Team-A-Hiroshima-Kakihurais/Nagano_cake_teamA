<h2>注文情報入力</h2>
<%= form_with model: @order, url: confirm_path do |f| %>
  <p>お支払い方法</p>
  <%= f.collection_radio_buttons( :payment_method, Order.payment_methods, :first, :first) do |b| %>
  <%= b.label { b.radio_button + b.text } %><br/>
  <% end %>
<div>
  <%= f.radio_button :address_option, 0, checked: "checked" %>
  <%= f.label :address_option_0, "ご自身の住所" %><br/>
  <%= current_customer.add_delivery_address %><br/>
  <%= current_customer.add_full_name %>
</div>
<div>
  <%= f.radio_button :address_option, 1 %>
  <%= f.label :address_option_1, "登録済住所から選択" %><br>
  <%= f.select :address, @deliveries, {}, {} %>
</div>
<%= f.submit '確認画面へ進む' %>
<% end %>
